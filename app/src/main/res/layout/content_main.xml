<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.handgranat.androidgotest.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numRuns1"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:text="100"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n1"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:text="36"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calc"
                android:id="@+id/button1"
                android:layout_marginTop="30dp"
                android:onClick="onClickCalcBtn"
                 />

         </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="30dp"
                    android:textAlignment="center"
                    android:minWidth="60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calc result"
                    android:id="@+id/javaResult1"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Time result"
                    android:textSize="12dp"
                    android:id="@+id/javaTimeResult1"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="30dp"
                    android:textAlignment="center"
                    android:minWidth="60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calc result"
                    android:id="@+id/goResult1"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Time result"
                    android:textSize="12dp"
                    android:id="@+id/goTimeResult1"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="30dp"
                    android:minWidth="60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calc result"
                    android:id="@+id/cResult1"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Time result"
                    android:textSize="12dp"
                    android:id="@+id/cTimeResult1"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numRuns2"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:text="100"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n2"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:text="36"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calc"
                android:id="@+id/button2"
                android:layout_marginTop="30dp"
                android:onClick="onClickCalcBtn"
                 />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000"
                android:id="@+id/button2"
                android:layout_marginTop="30dp"
                android:onClick="onClickCalcBtn2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000"
                android:id="@+id/button3"
                android:layout_marginTop="30dp"
                android:onClick="onClickCalcBtn3"
                />


         </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="30dp"
                    android:textAlignment="center"
                    android:minWidth="60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calc result"
                    android:id="@+id/javaResult2"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Time result"
                    android:textSize="12dp"
                    android:id="@+id/javaTimeResult2"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="30dp"
                    android:textAlignment="center"
                    android:minWidth="60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calc result"
                    android:id="@+id/goResult2"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Time result"
                    android:textSize="12dp"
                    android:id="@+id/goTimeResult2"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textIsSelectable="false"
                    android:layout_marginLeft="30dp"
                    android:minWidth="60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calc result"
                    android:id="@+id/cResult2"
                    android:textSize="12dp"
                    android:textIsSelectable="false"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Time result"
                    android:textSize="12dp"
                    android:id="@+id/cTimeResult2"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
